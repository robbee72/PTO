<!DOCTYPE html>
<html>
<head>
  <title>Paid Time Off</title>
   <meta name="viewport" content="width=device-width, initial-scale=1">
   <%= stylesheet_link_tag      'application', media: 'all', "data-turbolinks-track" => true  %>
    <%= javascript_include_tag  'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <ul>
    <div class="container">
     <ul class="nav nav-tabs">
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "About", about_path %></li>
      <li><%= link_to "Calendar", calendars_path %></li>
      <li><%= link_to "Requests", events_path %></li>

      <div class="pull-right employee-info">
        <% if current_employee %>
            <%= current_employee.name %> - <%= link_to "Sign Out", session_path(current_employee), method: :delete %>
          <% else %>
            <%= link_to "Sign In", new_session_path %> or
            <%= link_to "Sign Up", new_employee_path %>
          <% end %>
     </div>
   </ul>
     <% if flash[:notice] %>
       <div class="alert alert-success">
         <button type="button" class="close" data-dismiss="alert">&times;</button>
         <%= flash[:notice] %>
       </div>
     <% elsif flash.now[:alert] %>
       <div class="alert alert-danger">
         <button type="button" class="close" data-dismiss="alert">&times;</button>
         <%= flash.now[:alert] %>
       </div>
     <% elsif flash[:alert] %>
       <div class="alert alert-warning">
         <button type="button" class="close" data-dismiss="alert">&times;</button>
         <%= flash[:alert] %>
       </div>
     <% end %>

    <%= yield %>

  </div>
</body>
</html>
