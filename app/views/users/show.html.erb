
<p id="notice"><%= notice %></p>
<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>
<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>
<div class="row">
   <div class="col-md-4 col-md-offset-5 user-btns">
     <% if current_user == @user %>
       <%= link_to "New Event", new_users_path(@user, @event), class: 'btn btn-success' %>
     <% end %>
     <% if current_user && current_user.role == 'member' %>
       <%= link_to "Upgrade to Admin", new_users_path, class: 'btn btn-success' %>
     <% end %>
   </div>
 </div>
 <% if current_user && current_user.role == 'admin' %>
   <div class="event-box">
     <div class="event-header">
       <h2>Administrators Only</h2>
     </div>
     </div>
 <% end %>
</div>


<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
