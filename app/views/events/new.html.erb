<h3> New Event for PTO </h3>
  <%= form_for @event do |f| %>
  <%= f.select :name, [['Requested for PTO', 'Requested for PTO'],['PTO has NOT been approved', 'PTO has NOT been approved'],['PTO approved', 'PTO approved']] %>
   <%= f.hidden_field :occurs_on, value: params[:date] %><br />


   <textarea cols = "30" rows = "5" id = "comment_body" name =" @comment[body]">

   </textarea><br />

    <%= f.submit %>
  <%- end %>
