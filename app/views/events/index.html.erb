<h1>All Events</h1>

 <% @events.each do |event| %>
 <div class="media">
    <div class="media-body">
      <div class="col-md-8">
        <%= link_to  event.occurs_on, event %>
        <%= link_to  event.name, event %>
        <%= link_to "Delete event", @event, method: :delete, class: 'btn btn-secondary', data: { confirm: 'Are you sure you want to delete this event?' } %>
      </div>
    </div>
  </div>
 <% end %>

<% if user_is_authorized_for_events? %>
    <div class="col-md-4">
      <%= link_to "New Event", new_event_path, class: 'btn btn-success' %>
      <%= link_to "Back to Calendar", calendars_path, class: 'btn btn-success' %>

    </div>
  <% end %>
